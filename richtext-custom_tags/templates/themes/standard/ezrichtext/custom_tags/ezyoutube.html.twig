<div class="custom_tag-ezyoutube" {% if align is defined %} style="text-align: {{ align }};"{% endif %}>
    <div class="embed-video">
        <iframe
                type="text/html"
                {% if params.width is defined %}width="{{params.width}}"{% endif %}
                {% if params.height is defined %}height="{{params.height}}"{% endif %}
                src="//www.youtube.com/embed/{{ ibexa_richtext_youtube_extract_id(params.video_url) }}?autoplay={{ params.autoplay == 'true' ? 1 : 0 }}&rel=0"
                >
        </iframe>
    </div>
</div>
